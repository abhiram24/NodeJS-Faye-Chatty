<!DOCTYPE html>
<html>

<style type="text/css">

  .button{
      height:100px;
      width:250px;
      background:skyblue;
  }

</style>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js" type="text/javascript"></script>

<script type="text/javascript">

    $(document).ready(function(){
      $(':submit').on('click', function() { 
        var button = $(this).val();
        $.ajax({ 
          url: 'rooms', 
        })
        .done(function(data) { 
          $('#rooms').html(''); 
            
      if (button == 'GetUrl') { 
            for (var i in data) {
              if (i == 'url'){
                $('#rooms').append( i + ': ' + window.location.href + 'chatti?id=' + data[i] + '<br/>');
              }
              else{
                $('#rooms').append( i + ': ' + data[i] + '<br/>');
              }

            }
          }
    });
        return false; 
      });
    });
</script>

